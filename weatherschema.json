{
	"$schema": "http://json-schema.org/draft-04/schema#",
    "title": "city weather",
    "description": "Weather condition in England",
	"type" : "object",
	"required": [ "cityId", "cityName" ],
	"properties" : {
		"weather" : {
			"type" : "array", 
			"items" : { 
				"type" : "object",

				"properties" : {
					"city": 
					{
					 "type": "object",
						"items": {
							"type": "object",
							"properties" : {
							    "cityId": { "type" : "number","minimum":0},
							    "cityName": { "type" : "string"}
							},
							
				     "currentConditions" : { "type" : "string","enum": ["Sun", "Rain", "Light rain", "Snow", "Hail", "Clouds", "Light clouds", "Thunderstorm"]},
							
					"temprature": { "type" : "number" },
					"wind": 
					{
					 "type": "array",
						"items": {
							"type": "object",
							"properties" : {
							    "windSpeed": { "type" : "number", "minimum":0},
							    "windDirection":{"type": "string"},
							    "windChillFactor":{"type": "number"}  
				
							}	

				        }
			}
		}
	

}
}
}
}
}
}
	
